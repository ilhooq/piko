{
	"name" : "ilhooq/piko",
	"description" : "Ultra lighweight MVC web framework",
	"keywords" : [
		"micro-framework",
		"framework",
		"micro",
		"mvc"
	],
	"license" : "LGPL-3.0",
	"require" : {
		"php" : ">=5.6.0"
	},
	"autoload" : {
		"psr-4" : {
			"piko\\" : ""
		}
	},
	"require-dev" : {
		"phpunit/phpunit" : "^6.5",
		"squizlabs/php_codesniffer": "^3.4"
	},
	"scripts": {
		"tests": "phpunit",
		"coding-standard": "phpcs --standard=./coding-standard  --extensions=php --ignore=./vendor .",
		"coding-standard-fix": "phpcbf --standard=./coding-standard  --extensions=php --ignore=./vendor ."
	}
}
